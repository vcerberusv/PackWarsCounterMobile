<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PackWarsCounterMobile.GameChoices">
  <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness"
                iOS="20, 40, 20, 20"
                Android="20, 20, 20, 20"
                WinPhone="20, 20, 20, 20" />
  </ContentPage.Padding>
  <ContentPage.Content>
    <StackLayout VerticalOptions="FillAndExpand"
                 HorizontalOptions="FillAndExpand"
                 Orientation="Vertical"
                 Spacing="15">
      <Label Text="Choose a Game:"/>
      <Button x:Name="Hearthstone" Text="Hearthstone" IsEnabled="True"/>
      <Button x:Name="Pokemon" Text="Pokemon TCG" IsEnabled="True"/>
      <Button x:Name="MTG" Text="Magic The Gathering" IsEnabled="True"/>
      <Button x:Name="Custom" Text="Add Custom" IsEnabled="True"/>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>