<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PackWarsCounterMobile.StartPage">
  <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness"
                iOS="20, 40, 20, 20"
                Android="20, 20, 20, 20"
                WinPhone="20, 20, 20, 20" />
  </ContentPage.Padding>
  <ContentPage.Content>
    <StackLayout VerticalOptions="FillAndExpand"
                 HorizontalOptions="FillAndExpand"
                 Orientation="Vertical"
                 Spacing="15">
      <Label Text="Welcome to Pack Wars" VerticalOptions="Center" HorizontalOptions="Center" />
      <Button x:Name ="chooseButton" Text ="Choose Your Game" IsEnabled="true" Clicked="ToChooseGame"/>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>